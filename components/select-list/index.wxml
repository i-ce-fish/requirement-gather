<view wx:if="{{item.type==='axis'}}" class=" y-pl-20 y-pr-20 y-padding-tb">
    <van-slider value="{{ checked }}" use-button-slot bind:drag="drag" min="{{item.min}}" step="{{item.step}}"
                max="{{item.max}}">
        <view class="custom-button" slot="button">
            <van-button size="mini" round>{{ checked }}
            </van-button>
        </view>
    </van-slider>
    <view class="y-flex y-align-between y-padding-t y-color-gray">
        <view wx:for="{{item.item}}" wx:key="index"
        >
            <!--              bindtap="tapText" data-index="{{index}}" -->
            {{item.text}}
        </view>
    </view>
</view>
